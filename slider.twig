<section id="main-slider" class="no-margin">
        <div class="carousel slide">

            {% setcontent slides = 'slides' orderby 'datechanged' %}
            

            {# Indicators #}
            <ol class="carousel-indicators">
                {% for slide in slides %}
                {% if loop.first %}{% set active = 'active' %}{% else %}{% set active = '' %}{% endif %}
                    <li data-target="#main-slider" data-slide-to="{{ loop.index0 }}" class="{{ active }}"></li>
                {% endfor %}
            </ol>

            {# Wrapper for slides #}
            <div class="carousel-inner">
                {% for slide in slides %}
                    {% if loop.first %}{% set active = 'active' %}{% else %}{% set active = '' %}{% endif %}
                    <div class="item {{active}}" style="background-image: url({{ app.paths.files ~ slide.bgimage }})">
                    <div class="container">
                        <div class="row slide-margin">
                            <div class="col-sm-6">
                                <div class="carousel-content">
                                    <h1 class="animation animated-item-1">{{ slide.text1 }}</h1>
                                    <h2 class="animation animated-item-2">{{ slide.text2 }}</h2>
                                      {% set relatedrecords = slide.related() %}
                                            {% if relatedrecords is not empty %}
                                                {% for related in relatedrecords %}
                                                    <a class="btn-slide animation animated-item-3" href="{{ related.link }}">{{ __("Read More") }} </a>
                                                {%  endfor %}
                                            {% endif %}
                                </div>
                            </div>

                            <div class="col-sm-6 hidden-xs animation animated-item-4">
                                <div class="slider-img">
                                   <img src="{{ app.paths.files ~ slide.fgimage }}" class="img-responsive">
                                </div>
                            </div>

                        </div>
                    </div>
                </div><!--/.item-->
                {% endfor %}
            </div><!--/.carousel-inner-->
        </div><!--/.carousel-->

        <!-- Slider controls -->
        <a class="prev hidden-xs" href="#main-slider" data-slide="prev">
            <i class="fa fa-chevron-left"></i>
        </a>
        <a class="next hidden-xs" href="#main-slider" data-slide="next">
            <i class="fa fa-chevron-right"></i>
        </a>
    </section><!--/#main-slider-->
